<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ImageView
        android:id="@+id/img_stasiun"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:src="@drawable/berita1"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_stasiun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_stasiun"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/img_stasiun"/>

    <TextView
        android:id="@+id/txt_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alamat_stasiun"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/img_stasiun"
        android:layout_below="@id/txt_stasiun"/>

</RelativeLayout>