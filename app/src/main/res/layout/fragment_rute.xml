<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RuteFragment"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/txt_rute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/txt_rute"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_rute2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/txt_rute"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/txt_rute2"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/img_rute"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_rute2"
        android:src="@drawable/rute" />

</RelativeLayout>